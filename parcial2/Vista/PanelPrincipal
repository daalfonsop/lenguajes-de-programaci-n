    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed

        
        
        
        
        
        String []informacion = new String[5];
        
        informacion[0]= jTextField1.getText();
        
        informacion[1]= jTextField2.getText();
        
        informacion[2]= jTextField3.getText();
        
        informacion[3]= jTextField4.getText();
        
        informacion[4]= jTextField5.getText();
        
        modelo.addRow(informacion);
        
        jTextField1.setText("");
        jTextField2.setText("");
        jTextField3.setText("");
        jTextField4.setText("");
        jTextField5.setText("");
        
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed

        int fila= jTable1.getSelectedRow();
        if (fila >= 0) {
            modelo.removeRow(fila);
        }else{
            JOptionPane.showMessageDialog(null, "Seleccione una fila");
        }
    }//GEN-LAST:event_jButton3ActionPerformed

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton4ActionPerformed
        
        modelo.getDataVector().removeAllElements();
        modelo.fireTableDataChanged();
        
    }//GEN-LAST:event_jButton4ActionPerformed

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        
        
         int fila= jTable1.getSelectedRow();
         modelo= (DefaultTableModel) jTable1.getModel();
        if (fila >= 0) {
            modelo.setValueAt(jTextField1.getText(), fila, 0);
            modelo.setValueAt(jTextField2.getText(), fila, 1);
            modelo.setValueAt(jTextField3.getText(), fila, 2);
            modelo.setValueAt(jTextField4.getText(), fila, 3);
            modelo.setValueAt(jTextField5.getText(), fila, 4);
        }else{
            JOptionPane.showMessageDialog(null, "Seleccione una fila");
        }
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton2MouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jButton2MouseClicked
        // TODO add your handling code here:
        
        int filas= jTable1.getSelectedRow();
        modelo= (DefaultTableModel) jTable1.getModel();
        jTextField1.setText(modelo.getValueAt(filas, 0).toString());
        jTextField2.setText(modelo.getValueAt(filas, 1).toString());
        jTextField3.setText(modelo.getValueAt(filas, 2).toString());
        jTextField4.setText(modelo.getValueAt(filas, 3).toString());
        jTextField5.setText(modelo.getValueAt(filas, 4).toString());
    }//GEN-LAST:event_jButton2MouseClicked


